# Root-level .htaccess to route to /public and disable directory listings
<IfModule mod_autoindex.c>
  Options -Indexes
</IfModule>

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Redirect /public/ URLs to root (remove /public/ from URL)
  RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+public/([^\s]*) [NC]
  RewriteRule ^ /%1? [R=301,L]

  # If the request is for an existing file in public/, serve it directly
  RewriteCond %{REQUEST_URI} !^/public/
  RewriteCond public%{REQUEST_URI} -f
  RewriteRule ^(.*)$ public/$1 [L]

  # If the request is for an existing file or directory, serve it
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise forward everything to public/index.php
  RewriteRule ^ public/index.php [L]
</IfModule>

# No cache headers globally
<IfModule mod_headers.c>
  Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
  Header set Pragma "no-cache"
  Header set Expires "0"
</IfModule>
